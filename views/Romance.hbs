<!doctype html>
<html>
<head>
    <title>Book Store(Romance)</title>
    <style>
        body
        {
            margin: 0;
            background-image: url('https://images2.alphacoders.com/261/26102.jpg');
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: 100% 100%;
        }
        .nav
        {
            width: 100%;
            background-image: linear-gradient(90deg, black, rgb(153, 79, 79));
            height: 50px;
            position: fixed;
            top: 0;
            z-index: 9999;
        }
        .nav input, .nav button
        {
            margin: 7px;      
        }
        .nav input
        {
            margin-right: 0;
            margin-left: 50px;
            height: 27px;
            float: left;
        }
        .nav button
        {
            margin-left: 0;
            width: 36px; 
            height: 33px;
            float: right;
            position: absolute;
        }
        .nav ul
        {
            list-style: none;
            padding: 0;
            margin: 0;
            position: absolute;
        }
        .nav ul li
        {
            float: left;
        }
        .nav ul li a 
        {
            width: 150px;
            color: white;
            display: block;
            text-decoration: none;
            font-size: 20px;
            text-align: center;
            padding: 10px;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        }
        .nav a:hover
        {
            background-image: linear-gradient(-90deg, black, rgb(153, 79, 79));
        }
        .nav ul li ul
        {
            background-image: linear-gradient(90deg, black, rgb(153, 79, 79));
        }
        .nav ul li ul li
        {
            float: none;
        }
        .nav ul li ul
        {
            display: none;
        }
        .nav ul li:hover ul
        {
            display: block;
        }
        .container
        {
            margin: auto auto;
            height: max-content;
            width: max-content;
        }
        .book
        {
            height: 330px;
            width: 900px;
            position: relative;
            border: 2px solid rgb(109, 35, 35);
            border-collapse: collapse;
            margin: 60px 0;
            background-image: linear-gradient(90deg, black, rgb(153, 79, 79));
        }
        #title
        {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            color: white;
            margin-top: 80px;
            width: 900px;
            padding: 5px 0;
            height: fit-content;
            border: 2px solid rgb(109, 35, 35);
            background-image: linear-gradient(90deg, black, rgb(153, 79, 79));
        }
        img
        {
            max-height: 90%;
            max-width: 200px;
            width: auto;
            height: auto;
            position: absolute;
            top: 0;
            bottom: 0;
            left: 7%;
            margin: auto;
            float: left;
        }
        select, option
        {
            font-size: 17px;
            position: absolute;
            bottom: 25%;
            right: 23%;
            width: 112px;
            text-align: center;
            color: black;
            background-image: linear-gradient(180deg, gray, white);
        }
        hr
        {
            width: 227px;
            margin-right: 10%;
        }
        .container button
        {
            font-size: 20px;
            position: absolute;
            bottom: 6%;
            color: white;
            background-image: linear-gradient(90deg, black, rgb(109, 35, 35));
        }
        #cart
        {
            right: 23%;
        }
        .container button
        {
            right: 10%;
        }
        .container p
        {
            font-size: 20px;
            position: absolute;
            right: 10%;
            bottom: 19%;
            color: white;
            font-weight: bold;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        }
        .info
        {
            color: white;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            font-size: x-large;
            text-align: right;
            padding-right: 10%;
            line-height: 0.8;
        }
        .container button:hover
        {
            color: rgb(109, 35, 35);
            background-image: linear-gradient(90deg, gray, white);
        }
        footer
        {
            text-align: center;
            height: 50px;
            background-image: linear-gradient(90deg, black, rgb(109, 35, 35));
            color: white;
            bottom: 0;
            width: 100%;
            padding-top: 5px;
        }
        @media screen and (max-width: 1000px) 
        {
            div.nav
            {
                height: 100px;
            }
            #title
            {
                margin-top: 130px;
            }
            .container
            {
                width: 90%;
            }
            .book, #title
            {
                width: 100%;
            }
        }
        @media screen and (max-width: 600px) 
        {
            div.nav
            {
                height: 150px;
            }
            #title
            {
                margin-top: 180px;
            }
            img
            {
                max-width: 100px;
            }
        }
    #myUL a
        {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            color: white;
            font-size: 15px;
            padding: 10px;
            margin-top: -1px;
            text-decoration: none;
            background-color: black;
            border: 1px solid #ddd;
            display: block
        }
        #myUL a:hover
        {
            color: white !important;
            background-color: gray !important;
        }</style>
    <script>
        function myalert()
        {
            alert("Item successfully added to cart")
        }
        function search() 
        {
            var input, filter, ul, li, a, i, txtValue;
            input = document.getElementById("s");
            filter = input.value.toUpperCase();
            ul = document.getElementById("myUL");
            li = ul.getElementsByTagName("li");
            for (i = 0; i < li.length; i++) {
                a = li[i].getElementsByTagName("a")[0];
                txtValue = a.textContent || a.innerText;
                if (txtValue.toUpperCase().indexOf(filter) > -1) {
                    li[i].style.display = "";
                } 
                else {
                    li[i].style.display = "none";
                }
            }
        }
        function display()
        {
            var ul, li;
            ul = document.getElementById("myUL");
            ul.style.display = "";
        }
        function hide()
        {
            var ul, li;
            ul = document.getElementById("myUL");
            ul.style.display = "none";
        }
    </script>
</head>
